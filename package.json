{
  "name": "note-graph",
  "version": "0.1.0",
  "description": "Personal work note management system with AI-powered features",
  "packageManager": "bun@1.2.20",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "wrangler dev",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "bun run generate:pwa-icons && vite build",
    "build:backend": "tsc --project apps/worker/tsconfig.json",
    "preview": "vite preview",
    "deploy": "bun run build && wrangler deploy",
    "deploy:with-migrations": "bun run build && wrangler deploy && wrangler d1 migrations apply worknote-db --remote",
    "test": "vitest --run",
    "test:web": "vitest --run --config vitest.config.web.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "db:migrate": "wrangler d1 migrations apply worknote-db",
    "db:migrate:local": "wrangler d1 migrations apply worknote-db --local",
    "db:create-migration": "wrangler d1 migrations create worknote-db",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint:md": "markdownlint-cli2 **/*.md",
    "prepare": "husky",
    "generate:pwa-icons": "pwa-assets-generator --preset minimal-2023"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-pdf/renderer": "^4.3.2",
    "@tanstack/react-query": "^5.90.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.11.3",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.5.1",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "unpdf": "^1.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20260107.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/glob": "^9.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.20.0",
    "miniflare": "^4.20260103.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17",
    "wrangler": "^4.57.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "apps/worker/src/**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit --project apps/worker/tsconfig.json'",
      "vitest related --run"
    ],
    "apps/web/src/**/*.{ts,tsx}": "bash -c 'tsc --noEmit --project apps/web/tsconfig.json'"
  }
}
