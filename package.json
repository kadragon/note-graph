{
  "name": "note-graph",
  "version": "0.1.0",
  "description": "Personal work note management system with AI-powered features",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "wrangler dev",
    "build": "vite build && tsc --project tsconfig.backend.json",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "deploy:with-migrations": "npm run build && wrangler deploy && wrangler d1 migrations apply worknote-db --remote",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "db:migrate": "wrangler d1 migrations apply worknote-db",
    "db:migrate:local": "wrangler d1 migrations apply worknote-db --local",
    "db:create-migration": "wrangler d1 migrations create worknote-db",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ frontend/src/",
    "lint:md": "markdownlint-cli2 **/*.md",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tanstack/react-query": "^5.90.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.0.0",
    "lucide-react": "^0.554.0",
    "nanoid": "^5.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.1",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "unpdf": "^1.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.7",
    "@cloudflare/workers-types": "^4.20251118.0",
    "@eslint/js": "^9.15.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^9.15.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.19.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^7.2.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.47.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc --noEmit --project tsconfig.backend.json'",
      "vitest related"
    ],
    "frontend/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc --noEmit --project tsconfig.app.json'"
    ]
  }
}
